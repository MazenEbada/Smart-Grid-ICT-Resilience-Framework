<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="smartgrid.simcontrol.ui.launchconfig.AbstractSimcontrolTabGroup"
            id="smartgrid.simcontrol.ui.AbstractSimcontrolTabGroup"
            type="smartgrid.simcontrol.SimcontrolLaunchConfigurationType">
            
            <launchMode 
                  mode="debug"
                  perspective="org.eclipse.debug.ui.DebugPerspective"
                  description="">
            </launchMode>
            <launchMode
                  mode="run"
                  description="">
            </launchMode>
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="smartgrid.simcontrol.ui.toolbar">
            <command
                  commandId="smartgrid.simcontrol.ui.interruptCommand"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="smartgrid.simcontrol.ui.toolbar.InterruptButtonHandler"
            id="smartgrid.simcontrol.ui.interruptCommand"
            name="Free all Simulations">
      </command>
   </extension>
   
   



</plugin>
